{
  "openapi": "3.0.0",
  "info": {
    "title": "Finance Tracker API",
    "version": "0.1.0"
  },
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Register user",
        "requestBody": { "content": { "application/json": { "schema": { "type":"object","properties":{"username":{"type":"string"},"email":{"type":"string"},"password":{"type":"string"}},"required":["username","email","password"] } } } },
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/api/auth/login": {
      "post": { "summary": "Login" }
    },
    "/api/budgets": {
      "get": { "summary": "List budgets (auth required)" },
      "post": { "summary": "Create budget (auth required)" }
    },
    "/api/budgets/{id}": {
      "get": { "summary": "Get budget" },
      "put": { "summary": "Update budget" },
      "delete": { "summary": "Delete budget" }
    }
  }
}
